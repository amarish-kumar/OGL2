@model Repozytorium.Models.Kategoria

@{
    ViewBag.Title = "Edycja";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edytujesz kategorię: @Model.Nazwa</h2>

@if (ViewBag.Blad == true)
{
    <div class="alert alert-danger" role="alert">
        Wystąpił błąd podczas edycji.<br />
        Spróbuj ponownie.
    </div>
}
else if (ViewBag.Blad == false)
{
    <div class="alert alert-success" role="alert">
        Pomyślnie edytowano.
        Kategoria wygląda teraz następująco:
    </div>
}


