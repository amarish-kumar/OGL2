                    }
                </select>
                @Html.ValidationMessageFor(model => model.MiastoId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RodzajUmowyId, htmlAttributes: new { @class = "control-label col-md-2" })
