@model Repozytorium.Models.Views.OgloszenieDetailsViewModel

@{
    ViewBag.Tytul = "Usuń ogłoszenie nr" + Model.Id;
    ViewBag.Opis = "Usuń ogłoszenie nr" + Model.Id + " Opis do Google";
    ViewBag.SlowaKluczowe = "Ogloszenie, " + Model.Id + ", usuń";
}

<h2>Usuń ogłoszenie nr @Model.Id</h2>

@if (ViewBag.Blad == true)
{
    <div class="alert alert-danger" role="alert">
        Wystąpił błąd podczas usuwania.<br/>
        Spróbuj ponownie.
    </div>
}

<h3>Czy na pewno chcesz usunąć?</h3>
<div>
    <h4>Ogloszenie</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Uzytkownik.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Uzytkownik.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Tresc)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tresc)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Tytul)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tytul)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Wymagania)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Wymagania)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataDodania)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataDodania)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Usuń" class="btn btn-danger confirmation"  
                   onclick="return confirm('Czy na pewno chcesz usunąć?')"/> 
            @Html.ActionLink("Wróć", "Index", null, new { @class = "btn btn-warning" })
        </div>
    }
</div>

@section Scripts{
    <script type="text/javascript">
        $('.confirmation').on('click', function (){
            return confirm('Czy na pewno chcesz usunąć?');
    })
    </script>
    }
